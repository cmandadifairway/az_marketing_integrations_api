{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": true,
		"strict": false,
		"types": ["jest", "reflect-metadata"],
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules"]
}
